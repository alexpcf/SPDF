@model Projeto.Presentation.Areas.AreaRestrita.Models.RelatorioViewModel
@{
    ViewBag.Title = "Edicao";
    Layout = "~/Areas/AreaRestrita/Views/Shared/Layout.cshtml";
}

<h4>Atualizar dados de Cliente</h4>
<a href="/AreaRestrita/Relatorio/Relatorio" class="btn btn-info">
    Voltar para a consulta
</a>
<br />
<br />

@using (Html.BeginForm("AtualizarRelatorio", "Relatorio", FormMethod.Post))
{
    <!-- campo oculto -->
    @Html.HiddenFor(model => model.IdClienteQuestionario)

    <div class="text-danger">
        @Html.ValidationSummary()
    </div>

    <label>Email do Cliente:</label>
    @Html.TextBoxFor(model => model.Email,
        new
        {
            @class = "form-control col-md-4",
            @placeholder = "Email"
        })
    <span class="text-danger">
        @Html.ValidationMessageFor(model => model.Email)
    </span>
    <br />

    <label>Cpf do Cliente:</label>
    @Html.TextBoxFor(model => model.Cpf,
        new
        {
            @class = "form-control col-md-4",
            @placeholder = "Cpf"
        })
    <span class="text-danger">
        @Html.ValidationMessageFor(model => model.Cpf)
    </span>
    <br />

    <input type="submit" value="Atualizar Cliente"
           class="btn btn-primary" style="color: #fff;
    background-color: #007bff;
    border-color: #007bff;    display: inline-block;
    font-weight: 400;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    border: 1px solid transparent;
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    line-height: 2.5;
    border-radius: 0.25rem;
    transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;" />
        <br />
        <br />

        <strong>@ViewBag.Mensagem</strong>
}